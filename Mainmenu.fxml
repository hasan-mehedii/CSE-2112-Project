<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="700.0" style="-fx-background-color: linear-gradient(to bottom, #4facfe, #00f2fe);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oop_project.MainController">
    <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <!-- Title -->
        <Label style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="Bank Main Menu">
            <font>
                <Font name="Arial Bold" size="32.0"/>
            </font>
        </Label>

        <!-- Balance Field -->
        <TextField fx:id="balanceField" prefHeight="40.0" prefWidth="250.0" editable="false" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 18px;" />

        <!-- Check Balance Button -->
        <Button onAction="#handleCheckBalance" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #3498db; -fx-background-radius: 15; -fx-text-fill: white; -fx-font-size: 18px;" text="Check Balance"/>

        <!-- Cash Out Button -->
        <Button onAction="#handleCashOut" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #e74c3c; -fx-background-radius: 15; -fx-text-fill: white; -fx-font-size: 18px;" text="Cash Out"/>

        <!-- Deposit Button -->
        <Button onAction="#handleDeposit" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #2ecc71; -fx-background-radius: 15; -fx-text-fill: white; -fx-font-size: 18px;" text="Deposit"/>

        <!-- Delete Account Button -->
        <Button onAction="#handleDeleteAccount" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #8e44ad; -fx-background-radius: 15; -fx-text-fill: white; -fx-font-size: 18px;" text="Delete Account"/>
    </VBox>
</AnchorPane>
